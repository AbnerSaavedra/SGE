{% extends 'layout.twig' %}
{% block content %}

<h1>Sign in</h1>

	{% if responseMessage != '' %}
		<div class="alert alert-danger" role="alert">
			{{ responseMessage }}
		</div>
   {% endif %}
<div class="container-card-login card">
	<form action="login" method="POST" class="form-horizontal">
		<div class="form-group">
			<label for="rol" class="control-label">Rol</label>
			<select name="rol" class="form-control col-md-4">
				<option value="">Select rol...</option>
				<option value="student">Student</option>
				<option value="teacher">Teacher</option>
				<option value="teacher">Financial</option>
				<option value="admin">Admin</option>
			</select>
		</div>
	    <div class="form-group">
			<label for="title" class="control-label">Username</label>
			<input type="text" name="email" id="email" class="form-control col-md-4">
	    </div>
	 	<div class="form-group">
		   <label for="title" class="control-label">Password</label>
		   <input type="password" name="password" id="password" class="form-control col-md-4">
		</div>
	 
	 <button type="submit" class="btn btn-lg btn-primary btn-block btn-signin">Login</button>
</form>
</div>
{% endblock %}